<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="remuco.client.android"
    android:versionCode="1"
    android:versionName="0.9.6" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.BLUETOOTH" >
    </uses-permission>
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/remuco_48"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name=".RemucoService" />

        <activity
            android:name=".Remuco"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".RemucoLibrarySearch"
            android:label="@string/app_name_library_search" >
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />

                <category android:name="android.intent.category.VIEW" />
            </intent-filter>
        </activity>

        <receiver android:name="remuco.client.android.widget.RemucoWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="remuco.client.android.RemucoWidgetProvider.ACTION_PREV" />
                <action android:name="remuco.client.android.RemucoWidgetProvider.ACTION_PLAY" />
                <action android:name="remuco.client.android.RemucoWidgetProvider.ACTION_NEXT" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/remucowidget" />
        </receiver>
        <receiver android:name=".RemucoPhoneReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>